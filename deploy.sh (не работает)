#!/bin/bash
set -e

echo "[1/5] Обновить репозитории пакетов Ubuntu..."
sudo apt update

echo "[2/5] Установить Node.js и npm..."
sudo apt-get install -y nodejs npm

echo "[3/5] Установить feh (если не установлен)..."
sudo apt-get install -y feh

SERVICE_FILE=httpshare.service
SERVICE_PATH=/etc/systemd/system/$SERVICE_FILE
echo "[4/5] Копировать systemd unit-файл..."
sudo cp $SERVICE_FILE $SERVICE_PATH

echo "[5/5] Перезапустить и включить службу..."
sudo systemctl daemon-reload
sudo systemctl enable $SERVICE_FILE
sudo systemctl restart $SERVICE_FILE

echo "Deploy complete!" 